<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/video_card"
        app:strokeColor="@color/yellow" app:strokeWidth="2dp"
        android:backgroundTint="@color/white"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">
        <VideoView
        android:id="@+id/message_video"

        android:layout_width="match_parent"
        android:layout_height="200dp" />

        <TextView
            android:id="@+id/message_name"
            android:layout_width="match_parent"
            android:layout_marginTop="205dp"
            android:text="Cook"
            android:textSize="17dp"
            android:paddingLeft="15dp"
            android:textColor="@color/yellow"
            android:layout_height="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_number"
            android:layout_width="match_parent"
            android:layout_marginTop="235dp"

            android:text="Cook"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingLeft="16dp"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="255dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_text1"
                android:text="Cook"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:textStyle="bold"

                android:textColor="@color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp" />
            <TextView
            android:id="@+id/message_text2"
                android:text="Cook"
            android:layout_width="0dp"
                android:textStyle="bold"
                android:textColor="@color/black"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginRight="16dp"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="275dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_text3"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:text="Cook"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginRight="8dp" />
            <TextView
            android:id="@+id/message_text4"
                android:text="Cook"
            android:layout_width="0dp"
            android:layout_height="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_marginRight="16dp" />  </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/callButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"

        android:backgroundTint="@color/green"
        android:text="Call"
        android:textColor="@color/white"
        app:cornerRadius="20dp" />
</LinearLayout>



